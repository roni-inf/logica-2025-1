programa
{
	
	funcao inicio()
	{
		inteiro a, b
		escreva("Digite o 1º num.")
		leia(a)
		escreva("Digite o 2º num.")
		leia(b)
		soma(a,b)
	}

	funcao soma(inteiro a, inteiro b){
		escreva("O resultado da soma é:",a+b)
	}
}
